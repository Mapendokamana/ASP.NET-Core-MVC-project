@model InlandMarinaData.Customer

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form asp-action="Index" method="post">
    <div class="form-group row">
        <div class="col-sm-2"><label>Username:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.Username" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>First Name:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.FirstName" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Last Name:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.LastName" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Phone Number:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.Phone" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>City:</label></div>
        <div class="col-sm-4">
            <input type="text" asp-for="@Model.City" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Password:</label></div>
        <div class="col-sm-4">
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
</form>
